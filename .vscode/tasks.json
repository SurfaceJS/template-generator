{
	"version": "2.0.0",
	"tasks": [
		{
            "command": "tsc",
            "label": "tsc",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "node cli generate ../../workbench/modules/packages/@surface/cli/internal/templates",
            "isBackground": true,
            "label": "Generate templates",
            "options": {
                "cwd": "${workspaceFolder}/tasks"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/node_modules/.bin/mocha.cmd --loader=@surface/mock-loader --ui tdd ${fileDirname}/${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "Test File",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
	]
}