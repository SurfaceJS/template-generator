{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd":      "${fileDirname}",
            "name":     "Debug File",
            "program":  "${fileDirname}/${fileBasenameNoExtension}.js",
            "protocol": "inspector",
            "request":  "launch",
            "runtimeArgs":
            [
                "--nolazy"
            ],
            "skipFiles":
            [
                "<node_internals>/**",
            ],
            "sourceMaps": true,
            "type":       "node"
        },
        {
            "args":     ["generate", "../workbench/modules/packages/@surface/cli/internal/teplates"],
            "cwd":      "${workspaceFolder}",
            "name":     "Debug CLI",
            "program":  "${workspaceFolder}/tasks/cli.js",
            "protocol": "inspector",
            "request":  "launch",
            "runtimeArgs":
            [
                "--nolazy"
            ],
            "skipFiles":
            [
                "<node_internals>/**",
            ],
            "sourceMaps": true,
            "type":       "node"
        },
        {
            "args":
            [
                "--ui=tdd",
                "--timeout=9999999",
                "--colors",
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ],
            "cwd":  "${workspaceFolder}",
            "name": "Debug Test",
            "outFiles":
            [
                "${workspaceFolder}/tasks/**/*.js",
            ],
            "program":  "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "protocol": "inspector",
            "request":  "launch",
            "runtimeArgs":
            [
                "--loader=@surface/mock-loader",
                "--nolazy"
            ],
            "sourceMaps": true,
            "skipFiles":
            [
                "<node_internals>/**/*.js"
            ],
            "type": "node"
        },
    ]
}