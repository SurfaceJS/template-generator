    "version": "0.2.0",
    "configurations": [
        {
            "cwd":      "${fileDirname}",
            "name":     "Debug File",
            "program":  "${fileDirname}/${fileBasenameNoExtension}.js",
            "protocol": "inspector",
            "request":  "launch",
            "runtimeArgs":
